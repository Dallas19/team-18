<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <ImageButton
        android:id="@+id/foodId"
        android:onClick="leftPath"
        android:text="Food/Water"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#FFE502"
        android:src="@drawable/icn_food"
        />

    <ImageButton
        android:id="@+id/playId"
        android:onClick="rightPath"
        android:text="Play"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:src="@drawable/icn_tennisball"
        />

    <TextView
        android:id="@+id/textId"
        android:textSize="50dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>